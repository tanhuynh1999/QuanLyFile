@{
    ViewBag.Title = "Home Page";
}
<script src="https://cdn.jsdelivr.net/npm/tesseract.js@2.1.1/dist/tesseract.min.js"></script>
<link href="~/Content/imgupload.css" rel="stylesheet" />
<style>
    .day-6 .upload__wrapper {
        position: absolute;
        top: inherit;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 70%;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: inherit;
        overflow: hidden;
    }
</style>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header border-0">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0"></h3>
                    </div>
                </div>
            </div>
            <div class="">
                <!-- Projects table -->
                <form action="@Url.Action("PostSubmit","Read")" enctype="multipart/form-data" method="post">
                    @Html.AntiForgeryToken()
                    <table class="table align-items-center table-flush">
                        <thead class="bg-dark text-white">
                            <tr class="text-center">
                                <th scope="col"><i class="fa fa-file">&nbsp;</i>Thông tư</th>
                                <th scope="col"><i class="fa fa-atlas">&nbsp;</i>Hình thức</th>
                                <th scope="col"><i class="fa fa-calendar">&nbsp;</i>Ngày bắt đầu</th>
                                <th scope="col"><i class="fa fa-calendar-alt">&nbsp;</i>Ngày kết thúc</th>
                            </tr>   
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <select class="ui fluid search dropdown" name="file_circular">
                                        <option value="">Chọn thông tư</option>
                                        <option value="200">Thông tư 200</option>
                                        <option value="133">Thông tư 133</option>
                                    </select>
                                </th>
                                <td>
                                    <select class="ui fluid search dropdown" name="file_form">
                                        <option value="">Chọn hình thức</option>
                                        <option value="1">Gián tiếp</option>
                                        <option value="2">Trực tiếp</option>
                                    </select>
                                </td>
                                <td>
                                    <input type="date" class="form-control" style="height: 40px" name="file_startday" />
                                </td>
                                <td>
                                    <input type="date" class="form-control" style="height: 40px" name="file_endday" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" id="app">
                                    <div class="frame day-6">
                                        <div class="">
                                            <div class="upload__wrapper">
                                                <h1 class="upload__title">
                                                    <input type="text" class="w-100  text-center" name="file_company" placeholder="VUI LÒNG NHẬP TÊN CÔNG TY" style="border: none;"/>
                                                    <center>
                                                        <b class="text-danger">@TempData["check"]</b>
                                                    </center>
                                                </h1>
                                                <div class="upload__input-wrapper">
                                                    <img class="upload__image" src="https://100dayscss.com/codepen/upload.svg" alt="upload file">
                                                    <img class="upload__image upload__image--uploading" src="https://100dayscss.com/codepen/syncing.svg" alt="upload file">
                                                    <img class="upload__image upload__image--done" src="https://100dayscss.com/codepen/checkmark.svg" alt="upload file">
                                                    <input class="upload__input" type="file" name="file" id="file">
                                                    <span id="fileName" class="upload__file">TEKST</span>
                                                </div>
                                                <button id="upload" class="upload__button">
                                                    Bắt đầu
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="progress w-100" id="pr">
                            <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>*@
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    const form = document.querySelector('#form');
    const input = document.querySelector('#file');
    const fileName = document.querySelector('#fileName');
    const button = document.querySelector('#upload');
    const formStartingClass = form.classList;

    form.addEventListener('submit', function (e) {
        e.preventDefault();
        if (input.value != '') {
            form.classList = formStartingClass + ' upload__form--upload';
            button.innerHtml = 'Uploading';
            setTimeout(() => {
                button.textContent = 'Uploading.';
            }, 1000);
            setTimeout(() => {
                button.textContent = 'Uploading..';
            }, 1500);
            setTimeout(() => {
                button.textContent = 'Uploading...';
            }, 2000);
            setTimeout(() => {
                form.classList = formStartingClass + ' upload__form--done';
                button.textContent = 'Tiến hành';
            }, 2500);
        }
    })

    input.addEventListener('input', function (e) {
        form.classList = formStartingClass + ' upload__form--name';
        fileName.innerHTML = this.value.split(/(\\|\/)/g).pop();
    })
</script>